<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/AgentToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="MoneyLender"
        app:titleTextColor="@color/titlecolor"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/Agent_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        app:itemIconTint="@color/titlecolor"
        app:itemTextColor="@color/titlecolor"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:menu="@menu/agent_nav" />


    <RelativeLayout
        android:id="@+id/AgentmainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/AgentToolbar"
        android:layout_above="@+id/Agent_bottom_navigation">
    </RelativeLayout>

</RelativeLayout>