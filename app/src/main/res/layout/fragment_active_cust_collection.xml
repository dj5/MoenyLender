<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ActiveCustCollectionFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:id="@+id/ActiveCustSearch"
        android:hint="@string/search_customer"
        android:layout_below="@id/AgentHomeCard"
        android:inputType="text"
        android:layout_marginTop="2dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ActiveAgentRecycleList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ActiveCustSearch"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:scrollbars="vertical" />

</RelativeLayout>